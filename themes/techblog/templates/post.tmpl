{#  -*- coding: utf-8 -*- #}
{% import 'post_helper.tmpl' as helper with context %}
{% import 'comments_helper.tmpl' as comments with context %}

{% extends 'base.tmpl' %}

{% block extra_head %}
    {{ helper.twitter_card_information(post) }}

    {% if post.meta('keywords') %}

        <meta name="keywords" content="{{ post.meta('keywords')|e }}" xmlns="http://www.w3.org/1999/html">

    {% endif %}

{% endblock %}


{% block content %}

    <article class="post" itemscope itemtype="http://schema.org/BlogPosting">

        {{ helper.html_title() }}

    <img src="../images/{{ post.meta('image')|e }}" class="teaserImage" />

        <!--The Articles content -->
        <div itemprop="articleBody text">

            {{ post.text() }}

            {% if post.meta('author') %}

                <p>
                    {% include 'author.tmpl' %}
                </p>

            {% endif %}

        </div>

        {% if post.description() %}

            <meta content="{{ post.description() }}" itemprop="description">

        {% endif %}

        <small>

            {{ messages("Posted") }}:

            <time itemprop="datePublished" datetime="{{ post.date.isoformat() }}">

                {{ post.formatted_date(date_format) }}

            </time>

            {{ helper.html_translations(post) }}

            {{ helper.html_tags(post) }}

        </small>

    {% if not post.meta('nocomments') %}

        {{ comments.comment_form(post.permalink(absolute=True), post.title(), post._base_path) }}

    {% endif %}

    {{ helper.mathjax_script(post) }}

    </article>

    {{ helper.html_pager(post) }}

{% endblock %}
