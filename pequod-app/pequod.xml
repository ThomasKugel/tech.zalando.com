<?xml version='1.0' encoding='UTF-8'?>
<manifest xmlns="http://tech.zalando.com/pequod/schema/registry" version="1.0">
    <resources>
        <cpu default-vmhz="1000" min-vmhz="1000"/>
        <memory default-mb="512" min-mb="512"/>
        <filehandles default-count="4096" min-count="4096"/>
        <processes default-count="2000" min-count="2000"/>
    </resources>
    <filesystems>
        <temporary default-mb="1000" mountpoint="/workdir"/>
    </filesystems>
    <services>
        <provide service-name="tech-zalando-com" service-version="0" local-port="8000"/>
        <require service-name="stash-ssh" service-version="1" local-hostname="stash.zalando.net" local-port="7999"/>
    </services>
</manifest>
