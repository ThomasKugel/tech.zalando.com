<manifest xmlns="http://tech.zalando.com/pequod/schema/registry" version="1.0">
    <resources>
        <cpu default-vmhz="1000" min-vmhz="1000"/>
        <memory default-mb="128" min-mb="128" />
        <filehandles default-count="4096" min-count="4096"/>
        <processes default-count="10" min-count="10"/>
    </resources>

    <filesystems>
        <temporary default-mb="500" mountpoint="/workdir"/>
    </filesystems>

    <services>

        <provide service-name="tech-zalando-com" service-version="0" local-port="8000"/>

    </services>

    <network-rules>
        <allow network="::/0" protocol="tcp" port="7999" />
    </network-rules>


</manifest>
